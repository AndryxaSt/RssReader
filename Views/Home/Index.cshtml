@model IEnumerable<IEnumerable<RssReader.Models.News>>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="row">
    <div class="col-4"></div>
    <div class="col-8">
        <div id="carousel1" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://img-23.ccm2.net/MV65OgizRQ6PF9idQneYYQVLyVc=/500x/23e40ded829244a8938d729a709df304/ccm-faq/freefire.jpg" class="d-block w-100" alt="...">
                </div>

                @foreach (var news in Model.FirstOrDefault().Skip(5).Take(5))
                {
                    <div class="carousel-item">
                        <div class="card border-light shadow p-3 mb-5 bg-white rounded">
                            <img class="card-img-top" src="@news.ImgSrc" alt="Card image">
                            <div class="card-body">
                                <h5 class="card-title"><a href="@news.Url">@news.Title</a></h5>
                                <p class="card-text">@news.Discription</p>
                                <p class="card-text text-right"><small class="text-muted">@news.PubDate</small></p>
                            </div>
                        </div>
                    </div>
                }

            </div>

            <a class="carousel-control-prev" href="#carousel1" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next" href="#carousel1" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    </div>