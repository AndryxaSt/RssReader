@model RssReader.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>

    <div class="container">
        <h2>Подписки</h2>

        <div class="table-responsive">

            <table class="table table-hover">

                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Url</th>
                        <th>Категория</th>
                        <th><button type="button" class="btn btn-light" data-toggle="modal" data-target="#addModal">Добавить подписку</button></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var subscription in Model.Subscriptions)
                        {
                            <tr>
                                <td>@subscription.Title</td>
                                <td>@subscription.Url</td>
                                <td>@subscription.Category</td>
                                <td>@Html.ActionLink("Отписаться", "Delete", "Subscription", subscription, new { @class = "btn btn-light" })</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Добавить подписку</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @{Html.RenderPartial("Add", new RssReader.Models.Subscription());}
                </div>
            </div>
            <div class="modal-footer">
               
            </div>
        </div>
    </div>

</body>




