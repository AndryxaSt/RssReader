@model RssReader.Models.LoginModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title RssReader</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-group" }))
    {

        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, null, new { @class = "text-danger" })

        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <div class="row">
            <div class="col-4"></div>

            <div class="col-4">

                <div class="form-group">
                    <div>
                        <label for="email">Email</label><br />
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @id = "email", placeholder = "Введите Email" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label for="pwd">Пароль</label><br />
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @id = "pwd", placeholder = "Введите пароль" })
                    </div>
                </div>

                <div class="btn btn-group btn-block" role="group">

                    <button type="submit" class="btn btn-success" role="button">Войти</button>
                    <a href="~/Account/Register" class="btn btn-primary" role="button">Регистрация</a>


                </div>

            </div>
        </div>
    }


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>